# env.example - Пример переменных окружения для Moodboard проекта
# Скопируйте этот файл в .env и заполните реальными значениями

# Основные настройки
NODE_ENV=production
PORT=3000

# База данных (если используется)
DATABASE_URL=postgresql://username:password@localhost:5432/moodboard
# или для SQLite
# DATABASE_URL=sqlite:///./data/moodboard.db

# Redis (если используется для кэширования)
REDIS_URL=redis://localhost:6379

# JWT секреты
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here

# Настройки сессии
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Настройки файлов
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Настройки безопасности
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Настройки логирования
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Настройки почты (если используется)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Настройки мониторинга
ENABLE_METRICS=true
METRICS_PORT=9090

# Настройки разработки
DEBUG=false
ENABLE_SWAGGER=false
